<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StarWarsArchive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_btn</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/font_color_btn</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/starjedi_font</item>
        <item name="fontFamily">@font/starjedi_font</item>
        <item name="android:textSize">24sp</item>
        <item name="strokeColor">@color/font_color_btn</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/action_bar</item>
        <item name="fontFamily">@font/action_bar</item>
        <item name="android:text">32sp</item>
        <item name="android:textColorPrimary">@color/font_color_btn</item>
    </style>
</resources>